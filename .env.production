# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance.

# ============================================================================
# Logging & Monitoring
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_REQUESTS=true

# ============================================================================
# Mobile App Configuration
# ============================================================================
CAPACITOR_SERVER_URL=https://uae7guard.vercel.app
CAPACITOR_ANDROID_PACKAGE=com.uae7guard.crypto
CAPACITOR_IOS_BUNDLE=com.uae7guard.crypto

# ============================================================================
# Performance & Optimization
# ============================================================================
ENABLE_COMPRESSION=true
REQUEST_TIMEOUT=30000
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# ============================================================================
# Compliance & Legal
# ============================================================================
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
TOS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0

# ============================================================================
# Cache Settings
# ============================================================================
